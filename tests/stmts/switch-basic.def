// Unit test for simple switch statements.

decl printf (*char, ...) -> i32;

def simple_switch (n i32) -> void
begin
    switch n with
    case 0:
        printf("Zero.\n");
    case 1:
        printf("One.\n");
    case 2:
        printf("2a.\n");
        nobreak;
    case 3:
        printf("2b/3.\n");
    case _:
        printf("The rest.\n");
    esac
end

export
def main () -> i32
begin
    simple_switch(0);
    simple_switch(1);
    simple_switch(2);
    simple_switch(3);
    simple_switch(4);

    printf("done.\n");
    return 0;
end
