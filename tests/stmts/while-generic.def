// Unit test for generic while/do-while loops.

decl printf (*char, ...) -> i32;

export
def main () -> i32
begin
    var i i32;

    printf("loop\n");
    i = 0;
    while i < 4 do
        printf("  %d\n", i);
        ++i;
    od

    printf("loop\n");
    i = 4;
    while i > 0 do
        printf("  %d\n", i);
        --i;
    od

    printf("loop\n");
    i = 0;
    do
        printf("  %d\n", i);
        ++i;
    od while i < 4;

    // Never pass the condition.
    printf("loop\n");
    i = 0;
    while i < 0 do
        printf("  %d BAD NEWS\n", i);
        ++i;
    od

    printf("loop\n");
    i = 0;
    do
        printf("  %d\n", i);
        ++i;
    od while i < 1;

    return 0;
end
