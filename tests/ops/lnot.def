// Unit test for the logical not operator.

decl printf (*char, ...) -> i32;

export
def main () -> i32
begin
    var a i32 = 0;
    printf("a: %d, !a = %d\n", a, !a);

    a = 1;
    printf("a: %d, !a = %d\n", a, !a);

    a = -1;
    printf("a: %d, !a = %d\n", a, !a);

    // Done.
    printf("done.\n");

    return 0;
end
